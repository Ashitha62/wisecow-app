FROM ubuntu:20.04

# Avoid interactive prompts during install
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies
RUN apt-get update && \
    apt-get install -y netcat fortune && \
    apt-get clean

# Copy the script
COPY app/wisecow.sh /app/wisecow.sh
WORKDIR /app
RUN chmod +x wisecow.sh

# Expose port
EXPOSE 8080

# Run the script
CMD ["./wisecow.sh"]
